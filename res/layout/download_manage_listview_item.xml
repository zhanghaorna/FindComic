<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView 
        android:id="@+id/comic_cover"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView 
        android:id="@+id/comic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comic_cover"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        />
    <TextView 
        android:id="@+id/comic_status"
        android:layout_toRightOf="@id/comic_cover"
        android:layout_below="@id/comic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/middle_gray"/>
    <Button 
        android:id="@+id/comic_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dl_menu_button_selector"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>