<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <solid 
                android:color="@color/dark_green"/>
            <stroke
                android:width="1dp"
                android:color="@color/drak_gray"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
	<item>
	    <shape >
            <solid 
                android:color="@color/light_green"/>
            <stroke
                android:width="1dp"
                android:color="@color/drak_gray"/>
            <corners
                android:radius="3dp"/>
        </shape>
	</item>
</selector>