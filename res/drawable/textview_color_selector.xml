<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true" android:drawable="@color/silver_gray">
        <shape>
            <stroke 
                android:width="1dp"
                android:color="@color/gray"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:drawable="@color/silver_gray">
        <shape>
            <stroke 
                android:width="1dp"
                android:color="@color/gray"/>
        </shape>
    </item>
	<item android:drawable="@color/white_gray">
	    <shape>
            <stroke 
                android:width="1dp"
                android:color="@color/gray"/>
        </shape>
	</item>
</selector>
